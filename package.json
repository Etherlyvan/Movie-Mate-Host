{
  "name": "moviemate-app",
  "version": "1.0.0",
  "scripts": {
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:up-logs": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev-build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:logs-frontend": "docker-compose logs -f frontend",
    "docker:logs-backend": "docker-compose logs -f backend",
    "docker:logs-ai": "docker-compose logs -f ai-api",
    "docker:restart": "docker-compose restart",
    "docker:frontend-shell": "docker-compose exec frontend sh",
    "docker:backend-shell": "docker-compose exec backend sh",
    "docker:ai-shell": "docker-compose exec ai-api bash",
    "docker:health": "docker-compose ps"
  }
}